<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

  <fragment
      android:name="com.hissar.myrilla.app.MyrillaListFragment"
      android:id="@+id/myrilla_list_fragment"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:padding="16dp"
      />

  <fragment
      android:name="com.hissar.myrilla.app.MyrillaOverlayFragment"
      android:id="@+id/myrilla_overlay_fragment"
      android:layout_width="match_parent"
      android:layout_height="@dimen/overlay_height"
      android:layout_gravity="bottom"
      />

</FrameLayout>
